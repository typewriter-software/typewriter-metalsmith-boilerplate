{
  "source": "./src/contents",
  "destination": "./build",
  "metadata": {
    "title": "Typewriter Metalsmith Boilerplate",
    "description": "Metalsmith boilerplate for Typewriter-based Static Sites"
  },
  "plugins": {
    "metalsmith-typewriter": {
      "username": "mcrider",
      "project": "for-science",
      "templatesPath": "./src/templates",
      "template": "jade"
    },
    "metalsmith-markdown": {},
    "metalsmith-jade": {},
    "metalsmith-permalinks": {
      "pattern": ":collection/:slug"
    },
    "metalsmith-collections": {
      "products": {}
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./src/templates"
    }
  }
}
